{
  "manifest_version": 2,
  "name": "StampShot",
  "version": "1.0",
  "description": "Takes screenshots with stamp header",
  "permissions": [
    "activeTab",
    "downloads",
    "<all_urls>",
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "stampshot.svg"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "icons": {
    "48": "stampshot.svg"
  }
}
